@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap');

.contenedorTitulo{
  width: 520px;
  text-align: center;
  font-family: 'Roboto', sans-serif;
  font-weight: 700;
  font-size: 24px;
  line-height: 28px;
  color: #093C5D;
  display: flex;
  justify-content: center;
}

.contenedorCerrarModal{
  width: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tituloCrearEmpresa{
  width: 80%;
  margin-top: 16px;
}

.iconoCerrarModal{
  background-image: url('/src/assets/svg/icono_cerrar_crearEmpresa.svg');
  width: 13.18px;
  height: 13.18px;
}

.contenedorTabs{
  width: 520px;
  height: auto;
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.tabs{
  width: 420px;
  height: 32px;
  background-color: #F1F2F5;
  border-radius: 4px;
  display: flex;
}

.tab{
  width: 33.3%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
}

.tabCompletaSeleccionado{
  font-family: 'Roboto', sans-serif;
  font-weight: 700;
  font-size: 11px;
  line-height: 13px;
  text-align: center;
  background-color: #093C5D;
  color: #ffffff;
}

.tabCompletaSinSeleccion{
  font-family: 'Roboto', sans-serif;
  font-weight: 400;
  font-size: 11px;
  line-height: 13px;
  text-align: center;
  background-color: #093C5D;
  color: #ffffff;
}

.circuloCompletoSeleccionado{
  width: 14px;
  height: 14px;
  background-color: #11CA73;
  border-radius: 50%;
  margin-left: 5.5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tabSinSeleccionSinTerminar{
  font-family: 'Roboto', sans-serif;
  font-weight: 400;
  font-size: 11px;
  line-height: 13px;
  text-align: center;
  color: #303030;
  opacity: 0.6;
}

.circuloSinSeleccionSinTerminar{
  width: 14px;
  height: 14px;
  background-color: #C7CCDC;
  border-radius: 50%;
  margin-left: 5.5px
}

.tabSeleccionadoSinTerminar{
  font-family: 'Roboto', sans-serif;
  font-weight: 700;
  font-size: 11px;
  line-height: 13px;
  color: #093C5D;
  box-shadow: inset 0 -2px 0 #C7CCDC;
}



.iconoCompleto{
  background-image: url('/src/assets/svg/icono_tab_completo.svg');
  width: 8px;
  height: 5px;
}